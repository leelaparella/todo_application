<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>AddTaskServlet</servlet-name>
        <servlet-class>todo_application.AddTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTaskServlet</servlet-name>
        <url-pattern>/addTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewTaskServlet</servlet-name>
        <servlet-class>todo_application.ViewTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewTaskServlet</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CompleteTaskServlet</servlet-name>
        <servlet-class>todo_application.CompleteTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompleteTaskServlet</servlet-name>
        <url-pattern>/completeTask</url-pattern>
    </servlet-mapping>

</web-app>
